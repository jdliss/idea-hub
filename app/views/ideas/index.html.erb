<div class="container">

  <h1 class="center">Idea Hub</h1>

  <% @ideas.each do |idea| %>
    <div class="container">

      <div class="card">
        <div class="card-image">
          <img src="<%= idea.image %>" width="250" height="250" algorithm="fill_proportional">
          <span class="card-title"><%= idea.title %></span>
        </div>
        <div class="card-content">
          <p><%= idea.description %></p>
        </div>
        <div class="card-action">
          <%= link_to "Show", idea_path(idea) %>
        </div>
      </div>
    </div>
  <% end %>

</div>
