<div class="container">
  <h1 class="center">Your Ideas</h1>
</div>
<% @ideas.each do |idea| %>
  <div class="container">
    <div class="card">
      <div class="card-image">
        <img src="<%= idea.image %>">
        <span class="card-title"><%= idea.title %></span>
      </div>
      <div class="card-content">
        <p><%= idea.description %></p>
      </div>
      <div class="card-action">
        <%= link_to "Show", idea_path(idea) %>
      </div>
    </div>
  </div>
<% end %>
